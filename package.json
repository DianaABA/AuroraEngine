{
  "name": "aurora-engine",
  "version": "0.0.4",
  "private": false,
  "license": "MIT",
  "author": "Bug queen flow studio",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "src",
    "packages/ui/dist",
    "docs/scene-schema.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./scene-schema.json": "./docs/scene-schema.json"
  },
  "scripts": {
    "start": "npm run template:minimal:dev",
    "build": "tsc -p tsconfig.json",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "prepare": "husky install",
    "build:ui": "cd packages/ui && npm install && npm run build",
    "clean": "rimraf dist",
    "dev": "npm run build -- --watch",
    "test": "vitest run",
    "preview": "npm run build; node dist/examples/preview.js",
    "template:minimal:dev": "npm run build && cd templates/minimal && npm install && npm run dev",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "release:notes": "node scripts/gen-release-notes.js",
    "scenes:lint": "node scripts/scene-lint.js"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "@types/node": "^20.11.30",
    "execa": "^8.0.1",
    "rimraf": "^5.0.5",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^1.5.0"
  }
}
