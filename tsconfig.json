{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": false,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src", "templates/minimal/src"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}
